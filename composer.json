{
  "name": "rotdrop/opentbs-tool",
  "description": "Simple command-line tool for OpenTBS",
  "type": "project",
  "license": "GPL",
  "authors": [
    {
      "name": "Claus-Justus Heine",
      "email": "himself@claus-justus-heine.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "RotDrop\\OpenTBSTool\\": "src/"
    }
  },
  "require": {
    "php": ">=8.2",
    "symfony/console": "*",
    "tinybutstrong/opentbs": "dev-production/cafevdb"
  },
  "require-dev": {
    "clue/phar-composer": "1.4.0",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "^3.6.0",
    "zebra-north/phpcs-short-types": "^1.0"
  },
  "repositories": [
    {
      "type": "path",
      "url": "3rdparty/opentbs",
      "options": {
        "symlink": false
      }
    }
  ],
  "bin": ["bin/opentbs-tool"],
  "minimum-stability": "dev",
  "prefer-stable": true
}
